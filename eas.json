{
  "cli": {
    "version": ">= 12.0.0"
  },
  "build": {
    "development": {
      "developmentClient": true,
      "distribution": "internal",
      "android": {
        "newArchEnabled": true
      }
    },
    "preview": {
      "distribution": "internal",
      "android": {
        "buildType": "apk",
        "gradleCommand": ":app:assembleRelease",
        "newArchEnabled": true
      }
    },
    "production": {
      "android": {
        "buildType": "apk",
        "newArchEnabled": true
      },
      "ios": {
        "buildConfiguration": "Release",
        "newArchEnabled": true
      }
    }
  }
}
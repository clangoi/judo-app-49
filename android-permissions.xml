
<!-- This file contains the permissions that will be added to AndroidManifest.xml -->
<!-- Copy these permissions to android/app/src/main/AndroidManifest.xml after running npx cap add android -->

<!-- Internet access for API calls -->
<uses-permission android:name="android.permission.INTERNET" />

<!-- Camera access for video recording -->
<uses-permission android:name="android.permission.CAMERA" />

<!-- Storage access for file uploads -->
<uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
<uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

<!-- Media access for video/photo handling -->
<uses-permission android:name="android.permission.READ_MEDIA_IMAGES" />
<uses-permission android:name="android.permission.READ_MEDIA_VIDEO" />

<!-- Network state for offline detection -->
<uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

<!-- Optional: Vibration for haptic feedback -->
<uses-permission android:name="android.permission.VIBRATE" />
